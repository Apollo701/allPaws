  <form {{action "save" on="submit"}}>
    <div class="row">
      <div class="input-field col s4">
        <label>Name:
        {{input value = model.name class="validate"}}
        </label>
      </div>
      <div class="input-field col s4">
        <label>Age:
        {{input value = model.age class="validate"}}
        </label>
      </div>
      <div class="input-field col s4">
        <label>Breed:
        {{input value = model.breed class="validate"}}
        </label>
      </div>
      </div>
    <div class="row input-row">
      <div class="input-field">
        <label class="col s10">Bio:
        {{input value = model.bio class="validate"}}
        </label>
      </div>
    </div>
     <div class="row input-row">
     <div class="col s4">
     <h5>Sex:</h5>
     {{#md-radios
        selection=model.sex 
        content=radioChoices
        optionValuePath='sex'
        optionLabelPath='text'}}

        <p> {{ md-radio value="male" name="Male"  }} </p>
        <p> {{ md-radio value="female" name="Female" }} </p>

        {{/md-radios}}
      </div>
  <div class="col s4">
  <h5>Size:</h5>
  {{#md-radios
    selection=model.size
    content=radioChoices
    optionValuePath='size'
    optionLabelPath='text'}}

     <p> {{ md-radio value="small" name="Small" class="with-gap" }} </p>
     <p> {{ md-radio value="medium" name="Medium" class="with-gap" }} </p>
     <p> {{ md-radio value="large" name="Large" class="with-gap" }} </p>

     {{/md-radios}}
 </div>
 <div class="col s4">
  <h5>Additional information:</h5>
    <p> {{ md-check name="Trained" checked=model.trained }} </p>
    <p> {{ md-check name="Child friendly" checked=model.child-friendly }} </p>
    <p> {{ md-check name="Animal friendly" checked=model.animal-friendly }} </p>
    <p> {{ md-check name="Spayed or Neutered" checked=model.spayed-or-neutered }} </p>
  </div>
</div>
   
